<component type="desktop-application">
  <id>com.github.raibtoffoletto.litteris</id>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0</project_license>
  <name>Litteris</name>
  <summary>Penpal Correspondence Organized</summary>
  <description>
    <p>With Litteris you can organize your penpal contacts in a simple manner and keep track of your letters and postcards exchange.</p>
    <p>You can star your most frequent friends or search for that one you haven't talked much lately.</p>
  </description>

  <custom>
    <value key="x-appcenter-color-primary">#ffa154</value>
    <value key="x-appcenter-color-primary-text">#0e141f</value>
    <value key="x-appcenter-suggested-price">0</value>
  </custom>

  <screenshots>
    <screenshot type="default">
      <image>https://github.com/raibtoffoletto/litteris/raw/master/data/com.github.raibtoffoletto.litteris.screenshot.png</image>
